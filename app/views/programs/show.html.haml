- content_for :page_title, @program.name
.page-header
  %h1= @program.name
.row
  .span12
    = simple_format @program.description
.row
  .span6
    %h3 Applications
    - if @program.applications.any?
      %ol
        - for application in @program.applications do
          %li= link_to application.name, application
    - else
      %p
        No applications created for this program yet. #{link_to "Create the first one now.", new_application_path(program_id: @program.id)}
  .span6
    %h3 Tests
    - if false
      %ol
        - for application in @program.applications do
          %li= link_to application.name, application
    - else
      %p Cohorts has not conducted any tests for for this program yet.
.row
  .span12
    %hr/
    %p.muted.pull-left= link_to "&larr; All Programs".html_safe, programs_path
    %p.pull-right
      = link_to 'Edit this program', edit_program_path
      \. Last updated #{time_ago_in_words(@program.updated_at)} ago.
