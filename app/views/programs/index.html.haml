.row
  .span12
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th Description
          %th Applications
      %tbody
        - @programs.each do |program|
          %tr
            %td= link_to program.name, program
            %td= program.description
            %td= program.applications.collect{|a| link_to(a.name, a)}.join(", ").html_safe
.row
  .span12
    %p= link_to 'New Program', new_program_path
