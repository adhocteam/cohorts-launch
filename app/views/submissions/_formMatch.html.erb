<div class="row">
  <div class="span6">
    <%= form_for @submission do |f| %>
      <fieldset>
        <legend>Submission <% @submission.id %></legend>        
        <% if @submission.errors.any? %>
          <div id="error_explanation" class="alert alert-error">
            <ul>
            <% @submission.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <%= f.label "Person ID (Number)" %>
        <%= f.text_field :person_id, class: 'span2' %>

        <%= f.label :form_type %>
        <%= f.select(:form_type, Submission.form_types.keys.map {|form_type| [form_type.titleize,form_type]}) %>

        <div class="form-actions">
          <%= f.submit 'Save', class: "btn btn-primary" %>
          <%= link_to 'Cancel', :back, class: "btn" %>
        </div>
        
      </fieldset>
    <% end %>
  </div>
  <div class="span6">
    <p class="well">This form can be used to match a submission from Wufoo  with an existing Person.</p>
  </div>
</div>

