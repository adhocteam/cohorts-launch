.row
  .span6
    = form_for @submission do |f|
      %fieldset
        %legend
          Submission
          - @submission.id
        - if @submission.errors.any?
          #error_explanation.alert.alert-error
            %ul
              - @submission.errors.full_messages.each do |msg|
                %li= msg
        = f.label "Person ID (Number)"
        = f.text_field :person_id, class: 'span2'
        = f.label :form_type
        = f.select(:form_type, Submission.form_types.keys.map {|form_type| [form_type.titleize,form_type]})
        .form-actions
          = f.submit 'Save', class: "btn btn-primary"
          = link_to 'Cancel', :back, class: "btn"
  .span6
    %p.well This form can be used to match a submission from Wufoo  with an existing Person.
