= render partial: 'layouts/v2_event_menu'
%h1.ui.header Listing reservations
.ui.grid
  .equal.width.row
    .column
      %table.ui.sortable.striped.table
        %thead
          %tr
            %th Person
            %th Event
            %th Status
            %th Created by
            %th Time Slot
            %th
            %th
            %th
        %tbody
          - @reservations.each do |reservation|
            %tr
              %td= reservation.person.full_name
              %td= reservation.event.title
              %td= reservation.aasm_state
              %td= reservation.user.name
              %td= reservation.time_slot.to_weekday_and_time
              %td= link_to 'Show', reservation
              / <td><haml:loud> link_to &amp;#39;Edit&amp;#39;, edit_reservation_path(reservation) </haml:loud></td>
              %td= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' }
  .row
    .center.aligned.column
      = will_paginate @reservations, renderer: WillPaginateSemanticUi::ActionView::Renderer
