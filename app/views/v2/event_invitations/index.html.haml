= render partial: 'layouts/v2_event_menu'
%h1 List of Events
.row
  .span12
    %table.table.table-striped
      %thead
        %tr
          %th Title
          %th Description
          %th Starts at
          %th Ends at
          %th Created By
          %th Number Invited:
          %th Reservations
      %tbody
        - @events.each do |event|
          %tr
            %td= link_to event.title, event
            %td= event.description
            %td= event.start_datetime.to_s :long
            %td= event.end_datetime.to_s :long
            %td= event.user.name
            %td= event.invitees.count
            %td= event.event.reservations.size
            / probably link to the reservations for this event
.row
  .span12{style: "text-align:center"}
    = will_paginate @events, renderer: BootstrapPagination::Rails
.row
  .span12
    %p= link_to 'New Event', new_v2_event_invitation_path
