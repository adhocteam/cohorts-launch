- content_for :page_title, @event.name
.page-header
  %h1= @event.name
.row
  .span3
    = simple_format @event.description
  .span6
    %h3 Attendees
    - if @event.reservations.any?
      %table.table.table-hover
        %tbody
          %tr
            %th Name
            %th Confirmed
            %th Attended
          - for reservation in @event.reservations.includes(:person) do
            %tr
              = form_for(reservation, remote: true) do |form|
                %td= link_to reservation.person.full_name, reservation.person
                %td= form.check_box :confirmed_at, checked: reservation.confirmed_at.present?, class: "remote-checkbox"
                %td= form.check_box :attended_at, checked: reservation.attended_at.present?, class: "remote-checkbox"
      %p= button_to "Send this list to Mailchimp", export_event_path, remote: true, class: "btn"
    - else
      %p No attendees yet
  .span3
    .well
      %dl
        %dt Starts at
        %dd= @event.starts_at
        %dt Ends at
        %dd= @event.ends_at
        %dt Location
        %dd= @event.location
        %dt Address
        %dd= link_to @event.address, "https://maps.google.com?q=#{CGI.escape(@event.address)}"
        %dt Capacity
        %dd= @event.capacity
        %dt Application
        %dd
          = link_to @event.application.name, @event.application
.row
  .span12
    %hr/
    %p.muted.pull-left= link_to "&larr; All Events".html_safe, events_path
    %p.pull-right
      = link_to 'Edit this event', edit_event_path
      \. Last updated #{time_ago_in_words(@event.updated_at)} ago.
