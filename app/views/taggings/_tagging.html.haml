- readonly ||= false
.ui.label{ id: "tagging-#{tagging.id}" }
  = link_to search_index_path("q[tags_id_eq_all]" => tagging.tag.id), class: 'tag-name detail' do
    = tagging.tag.name
  - unless readonly
    = link_to tagging_path(tagging), method: :delete, remote: true, class: "delete-link", title: "delete this tag" do
      %i.delete.link.icon
