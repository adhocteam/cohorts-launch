#reservationModal.modal.fade{:tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
          %span.sr-only close
        %h4#resTitle.modal-title= @reservation.title
        %h5#resTime.modal-title= @reservation.start_datetime_human
        %h5#resState.modal-title= @reservation.human_state
      #resBody.modal-body
        %p
          A #{@reservation.duration / 60} minute interview:
        %p= @reservation.description
        - if current_user
          #modalDetails
            %dl.dl-horizontal
              %dt With:
              %dd= @reservation.person.full_name
              %dt Tel:
              %dd= @reservation.person.phone_number
              %dt Email:
              %dd= @reservation.person.email_address
      = render partial: 'v2/reservations/actions', locals: {reservation: @reservation, visitor: @visitor}
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
