<script> var token = '<%= @person.nil? ? false : @person.token %>'; </script>
<div id='calendar'></div>
<% if @person %>
  <%= link_to "iCal Feed", controller: 'calendar', action: :feed, token: @person.token, format: :ics %>
<% else %>
  <%= link_to "iCal Feed", controller: 'calendar', action: :feed, token: current_user.token, protocol: 'webcal', format: :ics %>
<% end %>

<div id="calendarModal" class="modal fade">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span> <span class="sr-only">close</span></button>
            <h4 id="modalTitle" class="modal-title"></h4>
        </div>
        <div id="modalBody" class="modal-body"></div>
        <div>Choose this time slot</div>
        <form id="reservationForm" method="post" style='display:none'>

        </form>

        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" data-dismiss="modal" id="submitButton">Select</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
</div>
