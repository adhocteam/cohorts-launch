$('.ui.modal#update-research_session-#{@research_session.id}-modal').remove();
$('.ui.modal#destroy-research_session-#{@research_session.id}-modal').remove();
$('#research_session-#{@research_session.id}').replaceWith("#{escape_javascript(render partial: 'research_sessions/research_session', locals: { research_session: @research_session } )}");
$('.ui.modal').modal({onShow: function () {
$('.ui.dropdown').dropdown();
$('.ui.modal .ui.calendar').calendar();
}});
$('.ui.modal-show.button').click(function() {
modalId = $(this).attr('id');
$('.ui.modal#' + modalId).modal('show');
});
