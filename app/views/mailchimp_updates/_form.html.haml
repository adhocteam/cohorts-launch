= form_for(@mailchimp_update) do |f|
  - if @mailchimp_update.errors.any?
    #error_explanation
      %h2
        = pluralize(@mailchimp_update.errors.count, "error")
        prohibited this mailchimp_update from being saved:
      %ul
        - @mailchimp_update.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :raw_content
    %br/
    = f.text_area :raw_content
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :update_type
    %br/
    = f.text_field :update_type
  .field
    = f.label :reason
    %br/
    = f.text_field :reason
  .field
    = f.label :fired_at
    %br/
    = f.datetime_select :fired_at
  .actions
    = f.submit
