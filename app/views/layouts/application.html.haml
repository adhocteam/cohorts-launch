!!!
%html
  %head
    %title
      Cohorts | #{title = yield(:page_title); title.present? ? title : controller_name.humanize.titlecase}
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    - if Cohorts::Application.config.google_analytics_enabled
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        var ga_options = {'siteSpeedSampleRate': 100}
        ga('create', '#{ENV['GOOGLE_ANALYTICS_ID']}',ga_options);
        ga('send', 'pageview');
  %body
    .navbar.navbar-inverse
      .navbar-inner
        .container
          - if current_user
            %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", type: "button"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
          %a.brand{href: root_path}= ENV['SITE_NAME']
          .nav-collapse.collapse
            - if current_user
              %ul.nav
                %li= link_to "People <span class='badge'>#{Person.where(active: true).count}</span>".html_safe, people_path
                %li= link_to "Gift Cards".html_safe, gift_cards_path
                %li= link_to "Submissions <span class='badge'>#{Submission.where('person_id is ?', nil).count}</span>".html_safe, submissions_path
                %li= link_to "SMS Campaigns", twilio_wufoos_path
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                    %span#cart-size.badge>= (session[:cart] ||= []).size
                    \&nbsp;Interview
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to "Calendar", calendar_path
                    %li= link_to "Invite", new_v2_event_invitation_path
                    %li= link_to "Events", v2_event_invitations_path
                    %li= link_to "Reservations", v2_reservations_path
                %li= link_to "Focus Group", events_path
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                    More
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to "Import Phone Numbers", '/twilio_messages/sendmessages'
                    %li= link_to "Add Submission", new_submission_path
                    %li= link_to "MailChimp Updates", mailchimp_updates_path
                    %li= link_to "Text Message Log", twilio_messages_path
                    %li= link_to "Programs", programs_path
                    %li= link_to "Applications", applications_path
              / account dropdown
              %ul#account-dropdown.nav.pull-right
                %li.dropdown
                  = link_to current_user.email, '#', class: 'dropdown-toggle current-user-name', 'data-toggle' => 'dropdown'
                  %ul.dropdown-menu
                    %li= link_to 'Profile', edit_user_registration_path
                    %li= link_to 'Sign out', destroy_user_session_path, method: :delete
              %p.navbar-text.pull-right= link_to "search", search_index_ransack_path, class: "muted navbar-text", id: 'adv-search'
              = search_form_for @q, url: search_index_ransack_path, method: :get, class: "navbar-search pull-right" do |f|
                = f.search_field :nav_bar_search_cont, class: "span2 search-query", placeholder: "query"
            - else
              %p.navbar-text.pull-right= link_to 'Sign in', new_user_session_path
          / /.nav-collapse
    #page-container.container
      #notifications
        - if flash[:notice] || flash[:alert] || flash[:error] || flash[:success]
          %div{class: "alert #{flash[:notice].present? ? "alert-success" : "alert-error"}"}
            %button.close{"data-dismiss" => "alert", type: "button"} &times;
            = flash[:alert]
            = flash[:notice]
            = flash[:error]
            = flash[:success]
      / notifications
      = yield
    / /container
    %footer
      %span.copyright
        \&copy; 2017 Ad Hoc LLC, all rights reserved.
        - unless Rails.env.production?
          %span.pull-right{style: "color:red;"}
            = Rails.env.to_s
