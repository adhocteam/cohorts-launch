= form_for @gift_card, remote: true do |f|
  - if @f.errors.any?
    #error_explanation
      %h2
        = pluralize(@f.errors.count, "error")
        prohibited this gift_card from being saved:
      %ul
        - @f.errors.full_messages.each do |message|
          %li= message
  .field.input-prepend
    = f.label :gift_card_number
    %br/
    %span.add-on ****-****-***
    = f.text_field :gift_card_number, placeholder: "#####", class: 'input-small', id: "new-cardnumber"
  .field
    = f.label :expiration_date
    %br/
    = f.text_field :expiration_date,class: 'input-mini'
  .field
    = f.label :person_id
    %br/
    = f.number_field :person_id,class: 'input-mini'
  .field
    = f.label :notes
    %br/
    = f.text_field :notes
  .field
    = f.label :created_by
    %br/
    = f.number_field :created_by
  .field
    = f.label :reason
    %br/
    = f.number_field :reason
  .actions
    = f.submit
