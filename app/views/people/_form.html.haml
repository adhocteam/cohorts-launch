= form_for @person, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :first_name, :class => 'control-label'
    .controls
      = f.text_field :first_name, :class => 'text_field'
  .control-group
    = f.label :last_name, :class => 'control-label'
    .controls
      = f.text_field :last_name, :class => 'text_field'
  .control-group
    = f.label :email_address, :class => 'control-label'
    .controls
      = f.text_field :email_address, :class => 'text_field'
  .control-group
    = f.label :verified, :class => 'control-label'
    .controls
      = f.text_field :verified, :class => 'text_field'
      (Start with 'Verified' to save as verified)
  .control-group
    = f.label :address_1, :class => 'control-label'
    .controls
      = f.text_field :address_1, :class => 'text_field'
  .control-group
    = f.label :address_2, :class => 'control-label'
    .controls
      = f.text_field :address_2, :class => 'text_field'
  .control-group
    = f.label :city, :class => 'control-label'
    .controls
      = f.text_field :city, :class => 'text_field'
  .control-group
    = f.label :state, :class => 'control-label'
    .controls
      = f.text_field :state, :class => 'text_field'
  .control-group
    = f.label :postal_code, :class => 'control-label'
    .controls
      = f.text_field :postal_code, :class => 'text_field'
  .control-group
    = f.label :geography_id, :class => 'control-label'
    .controls
      = f.text_field :geography_id, :class => 'text_field'
  .control-group
    = f.label :primary_device_id, :class => 'control-label'
    .controls
      = f.select :primary_device_id, Cohorts::Application.config.device_mappings.collect{|i| [i.first, i.last] } , :class => 'text_field', :include_blank => true
  .control-group
    = f.label :primary_device_description, :class => 'control-label'
    .controls
      = f.text_field :primary_device_description, :class => 'text_field'
  .control-group
    = f.label :secondary_device_id, :class => 'control-label'
    .controls
      = f.select :secondary_device_id, Cohorts::Application.config.device_mappings.collect{|i| [i.first, i.last] }, :class => 'text_field', :include_blank => true
  .control-group
    = f.label :secondary_device_description, :class => 'control-label'
    .controls
      = f.text_field :secondary_device_description, :class => 'text_field'
  .control-group
    = f.label :primary_connection_id, :class => 'control-label'
    .controls
      = f.select :primary_connection_id, Cohorts::Application.config.connection_mappings.collect{|i| [i.first.to_s.humanize, i.last] }, :class => 'text_field', :include_blank => true
  .control-group
    = f.label :primary_connection_description, :class => 'control-label'
    .controls
      = f.text_field :primary_connection_description, :class => 'text_field'
  .control-group
    = f.label :secondary_connection_id, :class => 'control-label'
    .controls
      = f.select :secondary_connection_id, Cohorts::Application.config.connection_mappings.collect{|i| [i.first.to_s.humanize, i.last] }, :class => 'text_field', :include_blank => true
  .control-group
    = f.label :secondary_connection_description, :class => 'control-label'
    .controls
      = f.text_field :secondary_connection_description, :class => 'text_field'
  .control-group
    = f.label :phone_number, :class => 'control-label'
    .controls
      = f.text_field :phone_number, :class => 'text_field'
  .control-group
    = f.label :preferred_contact_method, :class => 'control-label'
    .controls
      = f.select :preferred_contact_method, [["Email", "EMAIL"],["Text Message", "SMS"]], :class => 'text_field'
  .control-group
    = f.label :participation_type, :class => 'control-label'
    .controls
      = f.text_field :participation_type, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), |
      people_path, :class => 'btn'                                 |
