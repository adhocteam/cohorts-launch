<!-- event invitation scheduling handling. -->
              <% if session[:cart].blank? || !session[:cart].include?(person.id) %>
              <%= link_to t('.schedule', :default => "add to event"),
                          add_cart_path(person_id: person.id), :class => 'btn btn-mini', remote: true %>
              <% elsif session[:cart].include?(person.id) %>
              <%= link_to t('.schedule', :default => "remove from event"),
                          delete_cart_path(person_id: person.id), :class => 'btn btn-mini', remote: true %>
              <% end %>
