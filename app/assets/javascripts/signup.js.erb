$(document).ready(function () {
  // Map image
  $.getJSON("https://freegeoip.net/json/", function (data) {
    var $hero = $(".hero"),
        $heroBg = $hero.find('.hero-background'),
        customImg = $hero.data("image"),
        staticMap = "https://maps.googleapis.com/maps/api/staticmap?zoom=8&size=640x480&key=<%= ENV['GOOGLE_API_KEY'] %>&center=" + data.latitude + "," + data.long,
        heroImg = customImg || staticMap;

    $heroBg.css("background-image", "url(" + heroImg + ")");
  });

  // Scroll
  $("a[href='#signup']").click(function (e) {
    e.preventDefault();
    var target = $("#signup").offset().top;
    $("html, body").animate({ scrollTop: target });
  });
});